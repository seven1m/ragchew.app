<p>
  <a href="/">home</a> |
  <a href="/admin">admin</a> |
  <a href="/admin/clubs">clubs</a>
</p>

<h1><%== @club.full_name.presence || @club.name %></h1>

<% if @club.persisted? && @club.about_url %>
  <p><a href="/group/<%== make_value_safe_html_attribute(@club.name) %>">public page</a></p>
<% end %>

<form action="<%== @url %>" method="post" class="wide">
  <% unless @club.new_record? %>
    <input type="hidden" name="_method" value="patch"/>
  <% end %>
  <label>
    name:<br/>
    <input type="text" name="club[name]" value="<%== make_value_safe_html_attribute(@club.name) %>"/>
  </label><br/>

  <label>
    profile URL:<br/>
    <input type="text" disabled value="<%== make_value_safe_html_attribute(@club.profile_url) %>"/>
  </label><br/>

  <label>
    full name:<br/>
    <input type="text" name="club[full_name]" value="<%== make_value_safe_html_attribute(@club.full_name) %>"/>
  </label><br/>

  <label>
    about URL:<br/>
    <input type="text" name="club[about_url]" value="<%== make_value_safe_html_attribute(@club.about_url) %>"/>
  </label><br/>

  <label>
    logo URL:<br/>
    <input type="text" name="club[logo_url]" value="<%== make_value_safe_html_attribute(@club.logo_url) %>"/>
    <%= club_logo_image_tag(@club) %>
  </label><br/>

  </label><br/>

  <label>
    description:<br/>
    <textarea name="club[description]" rows="10"><%== @club.description %></textarea>
  </label><br/>

  <label>
    net patterns:<br/>
    <textarea name="club[net_patterns]" rows="10"><%== JSON.pretty_generate(@club.net_patterns || []) %></textarea>
  </label><br/>

  <label>
    net list:<br/>
    <textarea name="club[net_list]" rows="10"><%== JSON.pretty_generate(@club.net_list || []) %></textarea>
  </label><br/>

  <label>
    <input type="checkbox" name="force_update_existing_nets" value="true"> force update existing nets
  </label><br/>

  <input type="submit" value="save"/>
</form>

<h2>Nets</h2>

<ul>
  <% @club.nets.order(:name).each do |net| %>
    <li>
      <a href="/net/<%== url_escape(net.name) %>"><%== net.name %></a>
      (open)
    </li>
  <% end %>
  <% @club.closed_nets.order(:name, :started_at).each do |closed_net| %>
    <li>
      <a href="/admin/closed-net/<%== closed_net.id %>"><%== closed_net.name %></a>
      <em><%== format_time(closed_net.started_at) %></em>
    </li>
  <% end %>
</ul>
