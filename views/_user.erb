<% admins = ENV.fetch('ADMIN_CALL_SIGNS').split(',') %>

<div class="user-nav">
  <% if @user %>
    <% if @user.image %>
      <img src="<%== @user.image %>" style="height:40px"/><br/>
    <% end %>
    <a href="https://www.qrz.com/db/<%== url_escape(@user.call_sign) %>"><%== @user.call_sign %></a> |
    <a href="/favorites">favorites</a> |
    <% if admins.include?(@user.call_sign) %>
      <a href="/admin">admin</a> |
    <% end %>
    <a href="/logout" onclick="document.getElementById('logout-form').submit(); return false">log out</a>
    <form id="logout-form" style="display:none;" action="/logout" method="post"><input type="submit"/></form>
  <% else %>
    <a href="/login">log in</a>
  <% end %>
</div>
