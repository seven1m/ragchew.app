<%= erb :_user %>

<h1>RagChew.app</h1>

<p>
  This is a limited web-based user interface companion to the
  <a href="http://netlogger.org/">NetLogger</a> desktop software.
</p>

<%= erb :_timestamps %>

<h2>Nets</h2>

<% if @nets.any? %>
  <div class="table-wrapper">
    <table class="update-in-place" id="index-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Frequency</th>
          <th>Mode</th>
          <th>Band</th>
          <th>Started At</th>
          <th>Subscribers</th>
          <th>Host</th>
        </tr>
      </thead>
      <tbody>
        <% @nets.each do |net| %>
          <tr>
            <td><a href="/net/<%== url_escape(net[:name]) %>"><%== net[:name] %></a></td>
            <td><%== net[:frequency] %></td>
            <td><%== net[:mode] %></td>
            <td><%== net[:band] %></td>
            <td><%== format_time(net[:started_at]) %></td>
            <td><%== net[:subscribers] %></td>
            <td><%== net[:host] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p><em>no active nets</em></p>
<% end %>
